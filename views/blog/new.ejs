<% include ../partials/header %>
<div id="newblog" style="height: 120vh;
	background-image: url(https://images.unsplash.com/photo-1533615697355-29de55be4a87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1053&q=80);
	background-size:cover;
	background-repeat: no-repeat;">
<div class="container" style="width:60%;">
        <h1 style="text-align: center; font-family: 'lobster', cursive;" class="text-secondary">Create a new blog</h1>
        <div>
            <form action="/blogs" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="blog title">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="cover image url">
                </div>
                <div class="form-group">
                    <textarea class="form-control"  name="description" id="exampleFormControlTextarea1" rows="10">Blog content goes here...</textarea>
                </div>
                <div class="form-group" style="text-align:center">
                    <button class="btn btn-secondary" >Submit</button>
                </div>
            </form>
            <a href="/blogs"><--Go back</a>
        </div>
</div>
</div>


