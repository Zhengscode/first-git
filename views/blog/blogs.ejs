<% include ../partials/header %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Blog!</h1>
            <p>Read my blogs Or create your own blog here!</p>
            <p><a href="blogs/new" class="btn btn-dark">Add New Blog</a></p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% blogs.forEach(function(blog){ %>
            <div class="col-md-3 col-sm-6">
                <img class="img-thumbnail" src="<%= blog.image %>">
                <div class="caption">
                    <h4><%= blog.name %></h4>
                </div>
                <p>
                    <a href="/blogs/<%= blog._id %>" class="btn btn-dark">More info</a>
                </p>
            </div>
       <% }); %>
    </div>
</div>

<% include ../partials/footer %>
