<% include ../partials/header %>
<div id="newblog" style="height: 120vh;
	background-image: url(https://images.unsplash.com/photo-1533615697355-29de55be4a87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1053&q=80);
	background-size:cover;
	background-repeat: no-repeat;">
<div class="container" style="width:60%;">
        <h1 style="text-align: center; font-family: 'lobster', cursive;" class="text-secondary">Edit <%= blog.name %></h1>
        <div>
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[name]" value="<%= blog.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" value = "<%= blog.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="10" name="blog[description]" value="<%= blog.description %>"></textarea>
                </div>
                <div class="form-group" style="text-align:center">
                    <button class="btn btn-secondary">Submit</button>
                </div>
            </form>
            <a href="/blogs">Go back</a>
        </div>
    </div>
</div>







<% include ../partials/footer %>
