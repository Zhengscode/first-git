<% include ../partials/header %>
<div class="container">
        <h1 style="text-align:center;">Add new Comment to <%= blog.name %></h1><br>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="share your ideas!">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-dark btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogs">Back to Garden</a>
        </div>
</div>



