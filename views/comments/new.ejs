<% include ../partials/header %>
<div style="height: 120vh;
	background-image: url(https://images.unsplash.com/photo-1533615697355-29de55be4a87?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1053&q=80);
	background-size:cover;
	background-repeat: no-repeat;">
<div class="container">
        <h1 style="text-align:center; font-family: 'lobster', cursive; padding-top:3rem;" class="text-warning">Add new comment to <%= blog.name %></h1><br>
        <div style="width: 70%; margin: 0 auto;">
            <form action="/blogs/<%= blog._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comment[text]"></textarea>
                </div>
                <div class="form-group" style="text-align: center;">
                    <button class="btn btn-lg btn-warning">Submit</button>
                </div>
            </form>
            <a href="/blogs">Back to Blogs</a>
        </div>
</div>
</div>


<% include ../partials/footer %>
